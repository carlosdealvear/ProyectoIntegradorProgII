<!DOCTYPE html>
<html lang="en">
	<%-include("./partials/header")%>
    <main>
        <div class="uk-section uk-section-small">
            <div class="uk-container uk-container-small">
                <section class="info-usuario uk-flex uk-flex-around uk-width-1-1">
                    <div class="uk-width-1-3 uk-flex uk-flex-center uk-flex-middle">
                        <img src="/images/<%=usuario.img%>" alt="foto de perfil" class="foto-perfil">
                    </div>
                    <div class="uk-width-2-3 uk-flex uk-flex-column uk-flex-around">
                        <div class="uk-flex uk-flex-middle">
                            <h3 class="uk-margin-remove"><%= usuario.username%> </h3>
                            <button class="uk-button uk-button-small uk-button-secondary uk-margin-left">Seguir</button>
                        </div>
                        
                        <div class="data del seguidor">
                            <ul class="red-usuario uk-flex uk-flex-between uk-width-1-2">
                                <li><%= posteosUsuario.length %> posts</li>
                                <li>200 seguidores</li>
                                <li>300 seguidos</li>
                            </ul>
                        </div>
                    </div>
               </section>
               <section class="muro uk-flex uk-flex-middle uk-flex-center">
                    <div class="uk-grid uk-child-width-1-3 uk-width-1-1 uk-margin-remove" uk-grid>
                        <%for(let i=0; i<posteosUsuario.length; i++){ %>
                         <div class="uk-card uk-card-hover uk-card-body uk-flex uk-flex-column uk-flex-middle uk-flex-center ">
                            <a href="/post/detallePost/id/<%= posteosUsuario[i].id %> " class="link-detalle">
                                <img src="/fotosPosts/<%= posteosUsuario[i].img  %> " alt="foto" class="foto">
                                <p class="uk-text-center"><%= posteosUsuario[i].descrip %> </p>
                            </a>
                        </div>   
                        <% } %>
                    </div>
               </section>
            </div>
        </div>
    </main>


</body>
<%-include("./partials/footers")%>
</html>